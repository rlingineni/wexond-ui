{
  "compilerOptions": {
    "outDir": "./build/",

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "declaration": true,

    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "esnext"],

    "baseUrl": "./",

    "sourceRoot": "./src",

    "paths": {
      "@ui/*": ["src/*"],
      "@site/*": ["site/*"]
    }
  },
  "exclude": ["node_modules", "build"],
  "include": ["src"]
}
